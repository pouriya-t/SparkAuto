@page
@model SparkAuto.Pages.Cars.EditModel
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}




<br />
<h2 class="text-info">Edit Car</h2>
<br />

<form method="post" enctype="multipart/form-data">
    <div class="border backgroundWhite">
        <input type="hidden" asp-for="Car.Id" />
        <input type="hidden" asp-for="Car.UserId" />
        <input type="hidden" asp-for="Car.Image" />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Car.VIN"></label>
            </div>
            <div class="col-5">
                <input asp-for="Car.VIN" class="form-control" />
            </div>
            <span asp-validation-for="Car.VIN" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Car.Make"></label>
            </div>
            <div class="col-5">
                <input asp-for="Car.Make" class="form-control" />
            </div>
            <span asp-validation-for="Car.Make" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Car.Model"></label>
            </div>
            <div class="col-5">
                <input asp-for="Car.Model" class="form-control" />
            </div>
            <span asp-validation-for="Car.Model" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Car.Style"></label>
            </div>
            <div class="col-5">
                <input asp-for="Car.Style" class="form-control" />
            </div>
            <span asp-validation-for="Car.Style" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Car.Year"></label>
            </div>
            <div class="col-5">
                <input asp-for="Car.Year" class="form-control" />
            </div>
            <span asp-validation-for="Car.Year" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Car.Color"></label>
            </div>
            <div class="col-5">
                <input asp-for="Car.Color" class="form-control" />
            </div>
            <span asp-validation-for="Car.Color" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <div class="col-2">
                <label>Image</label>
            </div>
            @{
                var srcImage = $"/uploads/{Model.Car.Image}";
            }
            <div class="col-5">
                <img src="@srcImage" width="200" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2"></div>
            <div class="col-5">
                <input type="file" asp-for="Photo" />
            </div>
        </div>





        <div class="form-group row">
            <div class="col-6 offset-3 row">
                <div class="col-6">
                    <input type="submit" class="btn btn-info form-control" value="Update" />
                </div>
                <div class="col-6">
                    <a asp-page="Index" asp-route-userId="@Model.Car.UserId" class="btn btn-success form-control">Back to List</a>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
