@page
@model SparkAuto.DeleteModel
@{
    ViewData["Title"] = "Delete";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<br />
<h2 class="text-info">Delete</h2>
<br />

<form method="post">
    <div class="border backgroundWhite">
        <input asp-for="ServiceType.Id" hidden/>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="ServiceType.Name"></label>
            </div>
            <div class="col-10 ">
                <input class="form-control" readonly asp-for="ServiceType.Name" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="ServiceType.Price"></label>
            </div>
            <div class="col-10 ">
                <input class="form-control" readonly asp-for="ServiceType.Price" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-5 offset-2">
                <partial name="_DeleteAndBackToListButton"/>
            </div>
        </div>
    </div>

</form>


