@page
@model SparkAuto.IndexModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<br />
<br />


<div class="border backgroundWhite">
    <div class="row">
        <div class="col-6">
            <h2 class="text-info">Service Type List</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-page="Create" class="btn btn-info">
                <i class="fas fa-plus"></i>&nbsp; Create New
            </a>
        </div>
    </div>
    <br />
    <div>
        @if(Model.ServiceType.Count == 0)
        {
            <p>No Service Type Exists . Please Create a new Service Type .</p>
        }
        else
        {
            <table class="table table-striped border">
                <tr class="table-secondary">
                    <th>
                        @Html.DisplayNameFor(m=>m.ServiceType[0].Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(m=>m.ServiceType[0].Price)
                    </th>
                    <th></th>
                </tr>
                @foreach(var item in Model.ServiceType)
                {
            <tr>
                <td>
                    @Html.DisplayFor(m => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(m => item.Price)
                </td>
                <td style="width:150px;">
                    <div class="btn-group" role="group">
                        <a asp-page="Edit" asp-route-Id="@item.Id" class="btn btn-primary text-white">
                            <i class="fas fa-edit"></i>
                        </a>
                        <a asp-page="Details" asp-route-Id="@item.Id" class="btn btn-success text-white">
                            <i class="far fa-list-alt"></i>
                        </a>
                        <a asp-page="Delete" asp-route-Id="@item.Id" class="btn btn-danger text-white">
                            <i class="fas fa-trash-alt"></i>
                        </a>
                    </div>
                </td>
            </tr>
                }
            </table>
        }
    </div>
</div>

