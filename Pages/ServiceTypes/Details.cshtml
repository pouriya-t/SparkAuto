@page
@model SparkAuto.DetailsModel
@{
    ViewData["Title"] = "Details";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<br />
<h2 class="text-info">Details</h2>
<br />

<form>
    <div class="border backgroundWhite">
        <input type="hidden" asp-for="ServiceType.Id" />
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="ServiceType.Name"></label>
            </div>
            <div class="col-10 ">
                <input class="form-control" readonly asp-for="ServiceType.Name" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="ServiceType.Price"></label>
            </div>
            <div class="col-10 ">
                <input class="form-control" readonly asp-for="ServiceType.Price" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-5 offset-2">
                <div class="row">
                    <div class="col-6">
                        <a asp-page="Edit" asp-route-Id="@Model.ServiceType.Id" class="btn btn-info form-control">Edit</a>
                    </div>
                    <div class="col-6">
                        <a asp-page="Index" class="btn btn-success form-control">Back To List</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

</form>

